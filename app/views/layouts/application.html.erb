<!DOCTYPE html>
<html>
<head>
  <title>RecipeApp</title>
  <%= stylesheet_link_tag    'assets/reset' %>
  <%= stylesheet_link_tag    'assets/skeleton' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div class="container">
    <header class="app">
      <% if current_user %>
        <p>Welcome back, <%= current_user.first_name %>!</p>
        <nav><%= link_to('Home', root_path) %> | <%= link_to('Recipes', recipes_path) %> | <%= link_to('Collections', collections_path) %> | <%= link_to('Users', users_path) %>| <%= link_to 'Log Out', logout_path %></nav>
      <% else %>
        <nav><%= link_to 'Log In', login_path %> | <%= link_to 'Sign Up', new_user_path %></nav>
      <% end %>
    </header>
  <%= yield %>
  </div>
</body>

</html>
